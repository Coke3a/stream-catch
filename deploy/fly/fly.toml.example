app = "stream-rokuo-backend"
primary_region = "iad"

[build]
  dockerfile = "Dockerfile"
  build-target = "runtime-backend"

[env]
  SERVER_PORT_BACKEND = "8080"

[http_service]
  internal_port = 8080
  force_https = true
  auto_start_machines = true
  auto_stop_machines = "stop"
  min_machines_running = 0

  [[http_service.checks]]
    interval = "30s"
    timeout = "5s"
    method = "GET"
    path = "/api/v1/health-check"
